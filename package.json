{
  "name": "vui-focus",
  "version": "0.6.1",
  "description": "Mixins and CSS for applying focus outline styles",
  "scripts": {
    "clean": "rimraf *.css",
    "prebuild": "npm run clean",
    "build": "npm run build:sass:css && npm run build:less:css",
    "build:less:css": "lessc focus.css.less > focus-less.css",
    "postbuild:less:css": "csslint focus-less.css",
    "build:sass:css": "node-sass --output-style expanded focus.css.scss focus.css",
    "postbuild:sass:css": "csslint focus.css",
    "pretest": "npm run build",
    "test": "npm run diff:assert && karma start karma.conf.js",
    "prediff:assert": "npm run diff:create",
    "diff:assert": "assertnodiff --file1 ./test/diff/less-scss-diff --file2 ./test/diff/less-scss-diff-new",
    "diff:create": "createpatch --file1 focus-less.css --file2 focus.css -o ./test/diff/less-scss-diff-new"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-focus.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-focus/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-focus",
  "dependencies": {},
  "devDependencies": {
    "csslint": "^0.10.0",
    "diff-cli": "git://github.com/Brightspace/diff-cli.git#v0.0.1",
    "jasmine-dom-matchers": "^0.1.0",
    "karma": "^0.12.32",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-cli": "0.0.4",
    "less": "^2.5.1",
    "node-sass": "^3.1.1",
    "rimraf": "^2.3.4"
  }
}
